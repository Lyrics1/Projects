extends ../layout

block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 电影名字
						th 导演
						th 国家
						th 上映时间
						th 录入时间
						th 海报
						th 视频
						th 查看
						th 更新
						th 删除
				tbody
					each item in movies
						tr(class="item-id-#{item.id}")
							td #{item.title}
							td #{item.doctor}
							td #{item.country}
							td #{item.year}
							td #{item.pushTime} 
							td #{item.poster}
							td #{item.flash}
							td: a(target="_blank",href="../movie/#{item.id}")查看
							td
								button.btn.btn-primary.update(type="button",data-id="#{item.id}") 更新
							td
								button.btn.btn-danger.del(type="button",data-id="#{item.id}") 删除
