.container
	.row.rowself
		.page-header
			h1= title
			small= world
			form.navbar-form.navbar-right.fromsearch(role='search')
				.form-group.input-group
					input.form-control.search(type='text', placeholder='Search',list="search")
					datalist#search
						//- option jjj	
					span.input-group-btn
						button.btn.btn-default.search(type='button')
							span.glyphicon.glyphicon-search(aria-hidden='true') 
				//- button.btn.btn-default(type='submit') Submit
.navbar.navbar-default.navbar-fixed-top
	.container
		.navbar-header
			a.navbar-brand(href="/") Let's Do it!
		if user
			p.navbar-text.navbar-right
				div.owner
					img.img-circle.Fuser(src="#{userImg}",alt="Hello,#{user} !")
					.btn-group
						button.btn.btn-default.dropdown-toggle.b(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
							| 
							span.caret
						ul.dropdown-menu
							li
								label
									span.glyphicon.glyphicon-align-left.licon(aria-hidden='true')
									span  Hello,#{user} !
							li
								label
									span.glyphicon.glyphicon-user.licon(aria-hidden='true')
									a(href='/information') 我的主页
							li
								label
									span.glyphicon.glyphicon-envelope.licon(aria-hidden='true')
									a(href='#') 我的消息
							li
								label
									span.glyphicon.glyphicon-info-sign.licon(aria-hidden='true')
									a.navbar-link(href="/logout") 登出
		else
			p.navbar-text.navbar-right
				a.navbar-link(href="#",data-toggle="modal",data-target="#signupModal") 注册
				<span> &nbsp | &nbsp
				a.navbar-link(href="#",data-toggle="modal",data-target="#signinModal") 登录
#signupModal.modal.fade
	.modal-dialog
		.modal-content
			form
				.modal-header 注册
				.modal-body
					.form-froup
						label(for="signupName") 用户名
						input#signupName.form-control(name="username",type="text",placeholder="例如：张帆")
					.form-froup
						label(for="signuppassword") 密码
						input#signupName.form-control(name="password",type="password",placeholder="支持字母和数字2到16")
					div#errTip 
					.modal-footer
						button.btn.btn-default(type="button",data-dismiss="modal") 关闭
						button.btn.btn-default.signUpsubmit(type="submit") 提交
#signinModal.modal.fade
	.modal-dialog
		.modal-content
			form
				.modal-header 登录
				.modal-body
					.form-froup
						label(for="signinName") 用户名
						input#signupName.form-control.name(name="username",type="text")
					.form-froup
						label(for="signinpassword") 密码
						input#signupName.form-control.pass(name="password",type="password")
					div#signerrTip 
					.modal-footer
						button.btn.btn-default(type="button",data-dismiss="modal") 关闭
						button.btn.btn-default.signInsubmit(type="submit") 提交


